# Database
DATABASE_URL="postgresql://user:password@localhost:5432/smm_panel?schema=public"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-generate-with-openssl-rand-base64-32"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Korapay Payment Gateway
KORAPAY_PUBLIC_KEY="your-korapay-public-key"
KORAPAY_SECRET_KEY="your-korapay-secret-key"
KORAPAY_WEBHOOK_SECRET="your-korapay-webhook-secret"
KORAPAY_BASE_URL="https://api.korapay.com/merchant/api/v1"

# Cryptomus Payment Gateway
CRYPTOMUS_API_KEY="your-cryptomus-api-key"
CRYPTOMUS_MERCHANT_ID="your-cryptomus-merchant-id"
CRYPTOMUS_WEBHOOK_SECRET="your-cryptomus-webhook-secret"
CRYPTOMUS_BASE_URL="https://api.cryptomus.com/v1"

# Exchange Rate API
EXCHANGE_RATE_API_KEY="your-exchange-rate-api-key"
EXCHANGE_RATE_API_URL="https://api.exchangerate-api.com/v4/latest"
EXCHANGE_RATE_CACHE_TTL="3600" # 1 hour in seconds

# Email Configuration (SendGrid or SMTP)
EMAIL_PROVIDER="smtp" # smtp or sendgrid
SENDGRID_API_KEY="your-sendgrid-api-key"
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-email-password"
EMAIL_FROM="noreply@smm-panel.com"

# Redis (for BullMQ background jobs)
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
REDIS_DB="0"

# Application Settings
APP_NAME="SMM Panel"
APP_URL="http://localhost:3000"
BASE_CURRENCY="USD"
DEFAULT_LANGUAGE="en"

# Security Settings
JWT_SECRET="your-jwt-secret-generate-with-openssl-rand-base64-32"
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="900000" # 15 minutes
ACCOUNT_LOCKOUT_THRESHOLD="5"
ACCOUNT_LOCKOUT_DURATION="1800000" # 30 minutes

# Web Push Notifications (Optional)
VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"
VAPID_SUBJECT="mailto:admin@smm-panel.com"

# WhatsApp Integration (Optional)
WHATSAPP_PHONE_NUMBER_ID="your-whatsapp-phone-number-id"
WHATSAPP_ACCESS_TOKEN="your-whatsapp-access-token"
WHATSAPP_VERIFY_TOKEN="your-whatsapp-verify-token"

# Monitoring & Analytics (Optional)
SENTRY_DSN="your-sentry-dsn"
GOOGLE_ANALYTICS_ID="your-ga-id"

# Admin Settings
ADMIN_EMAIL="admin@smm-panel.com"
ENABLE_REGISTRATION="true"
ENABLE_2FA="false"

# Provider Settings
PROVIDER_SYNC_INTERVAL="3600000" # 1 hour
PROVIDER_TIMEOUT="30000" # 30 seconds
PROVIDER_MAX_RETRIES="3"

# Subscription & Billing
SUBSCRIPTION_BILLING_CRON="0 0 * * *" # Daily at midnight
REFILL_CHECK_CRON="0 */6 * * *" # Every 6 hours

# Import Settings
MAX_IMPORT_FILE_SIZE="10485760" # 10MB
IMPORT_CHUNK_SIZE="1000"
ENABLE_REMOTE_DB_IMPORT="true"
